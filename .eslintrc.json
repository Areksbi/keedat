{
  "env": {
    "browser": true,
    "commonjs": true,
    "es6": true
  },
  "extends": ["google"],
  "globals": {
    "Atomics": "readonly",
    "SharedArrayBuffer": "readonly"
  },
  "parserOptions": {
    "ecmaVersion": 2018
  },
  "rules": {
    "max-len": ["error", { "code": 140 }]
  },
  "ignorePatterns": ["dist", "node_modules", "src"]
}
